<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/app_item_shadow"
        android:layout_width="@dimen/app_cell_width_and_margin"
        android:layout_height="@dimen/app_cell_height_and_margin"
        android:background="@drawable/cs_bg_sq"
        android:contentDescription="@string/global_desc"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/app_item_content"
        android:layout_width="@dimen/app_cell_width"
        android:layout_height="@dimen/app_cell_height"
        android:layout_marginLeft="@dimen/app_cell_margin_left"
        android:layout_marginTop="@dimen/app_cell_margin_top"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/app_item_icon"
            android:layout_width="@dimen/global_app_icon_size"
            android:layout_height="@dimen/global_app_icon_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/app_cell_margin_top_icon"
            android:contentDescription="@string/global_desc" />

        <TextView
            android:id="@+id/app_item_name"
            android:layout_width="@dimen/app_cell_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/app_cell_margin_top_text"
            android:fontFamily="sans-serif-condensed"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:shadowColor="#B0000000"
            android:shadowRadius="2.0"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#ffffffff"
            android:textSize="@dimen/app_text_size" />
    </FrameLayout>

    <ImageView
        android:id="@+id/app_item_reflect"
        android:layout_width="@dimen/app_cell_width"
        android:layout_height="@dimen/app_reflect_height"
        android:layout_marginLeft="@dimen/app_cell_margin_left"
        android:layout_marginTop="@dimen/app_cell_margin_top_shadow"
        android:contentDescription="@string/global_desc"
        android:scaleType="fitXY"
        android:visibility="gone" />

</merge>