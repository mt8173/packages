<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_home_atet" >

    <RelativeLayout
        android:layout_width="605.0dip"
        android:layout_height="193.0dip"
        android:layout_centerInParent="true"
        android:background="@drawable/setting_voice_bg" >

        <TextView
            style="@style/start_setting_title_style"
            android:text="@string/setting_voice_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88.0dip"
            android:layout_marginTop="66.0dip"
            android:text="@string/setting_voice_tip"
            android:textColor="#ff4c4c4c"
            android:textSize="18.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88.0dip"
                android:text="@string/setting_voice_lable"
                android:textColor="#ff4c4c4c"
                android:textSize="24.0sp" />

            <ImageButton
                android:id="@+id/imgBtnVoiceDec"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_marginLeft="18.0dip"
                android:background="@drawable/setting_voice_dec_btn_selector"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <SeekBar
                android:id="@+id/volum_seek"
                android:layout_width="335.0dip"
                android:layout_height="wrap_content"
                android:paddingTop="30.0dip"
                android:paddingBottom="30.0dip"
                android:layout_marginLeft="7.0dip"
                android:layout_gravity="center"
                android:progress="15"
                android:focusableInTouchMode="true"
                android:max="100"
                android:paddingLeft="13.0dip"
                android:paddingRight="13.0dip"
                android:progressDrawable="@drawable/setting_voice_seekbar_selector"
                android:thumb="@drawable/setting_voice_seekbar_thumb"
                android:thumbOffset="3.0dip" />

            <ImageButton
                android:id="@+id/imgBtnVoiceInc"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_marginLeft="7.0dip"
                android:background="@drawable/setting_voice_inc_btn_selector"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/voice_tip"
        android:layout_width="309.0dip"
        android:layout_height="42.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/start_main_bg_bottom_voicectr" />

</RelativeLayout>