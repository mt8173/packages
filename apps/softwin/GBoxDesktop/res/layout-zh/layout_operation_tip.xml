<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/opoeration_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/opoeration_tip2"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:contentDescription="@string/global_desc"
        android:scaleType="centerInside"
        android:src="@drawable/operation_tip_uninstall" />

    <ImageView
        android:id="@+id/opoeration_tip"
        android:layout_width="350dip"
        android:layout_height="50dip"
        android:contentDescription="@string/global_desc"
        android:scaleType="centerInside"
        android:src="@drawable/operation_tip_menu" />

    <TextView
        android:id="@+id/operation_tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
